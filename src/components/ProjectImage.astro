---
export interface Props {
    image: string;
    colSpan?: string;
    colStart?: string;
    mbLarge?: string;
}

const { image, colSpan = 1, colStart = 1, mbLarge = 0 } = Astro.props

let classes = "mb-5 lg:mb-" + mbLarge + " lg:col-span-" + colSpan + " lg:col-start-" + colStart;

---

<img src={image} class={classes} />
