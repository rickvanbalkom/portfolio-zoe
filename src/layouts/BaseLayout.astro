---
const {title} = Astro.props;
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
</head>
<body class="p-5">
  <header class="flex flex-row justify-between mb-60 md:max-w-xl">
    <h1 class="text-xl font-bold"><a href="/">Rui Hu</a></h1>
    <nav class="flex space-x-14">
      <a href="/work" class="text-xl">Work</a>
      <a class="text-xl">About</a>
    </nav>
  </header>
  <main class="sm:mx-14 grid grid-cols-1 xl:grid-cols-12">
    <slot />
  </main>
</body>
</html>
