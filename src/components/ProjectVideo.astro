---
export interface Props {
    youtubeId: string;
}

const {youtubeId} = Astro.props;
let srcUrl = 'https://www.youtube-nocookie.com/embed/' + youtubeId;
---

<div class="lg:col-span-3 aspect-video">
  <iframe class="w-full h-full" src={srcUrl} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>