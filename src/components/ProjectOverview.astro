---
export interface Props {
    title: string;
    image: string;
}

const {title, image} = Astro.props;
---

<div class="flex flex-col justify-between lg:col-span-1">
  <div class="text-xl">
    <h2 class="mb-3 text-4xl font-bold uppercase overflow-x-visible">{title}</h2>
    <slot name="highlights" />
  </div>
  <img src={image} class="my-5 lg:mt-24 lg:mb-2">
</div>
<div class="mt-auto lg:col-span-1 lg:col-start-3 text-xl text-justify">
  <slot name="summary" />
</div>